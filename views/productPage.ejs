<style>
    body {
        display: fixed;
        min-height: 100vh;
        background: green;
        background: url("assets/loginbg.jpg");
        background-repeat: top;
        background-position: center;
        background-size: cover;
        background-attachment: fixed;
    }
</style>

<body ng-app="produstPage" ng-controller="productController" ng-init="InitProductPage()">
    <div>
        <div ng-include="'shared/modals.html'"></div>


        <!-- Nav Bar -->
        <div ng-include="'shared/navbar.html'"></div>
        <!-- Nav Bar End -->
        <div class="container" style="margin-top:100px">

            <div class="row">
                <div class="col-sm-12 col-lg-6">
                    <div id="my-carousel" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li class="active" data-target="#my-carousel" data-slide-to="0" aria-current="location">
                            </li>
                            <li data-target="#my-carousel" data-slide-to="1"></li>
                            <li data-target="#my-carousel" data-slide-to="2"></li>
                            <li data-target="#my-carousel" data-slide-to="3"></li>
                            <li data-target="#my-carousel" data-slide-to="4"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" style="max-height: 300px;min-height: 300px;"
                                    ng-src="{{currentDisplayingProduct.image1}}" alt="">
                                <div class="carousel-caption d-none d-md-block">
                                </div>
                            </div>
                            <div class="carousel-item ">
                                <img class="d-block w-100" style="max-height: 300px;min-height: 300px;"
                                    ng-src="{{currentDisplayingProduct.image2}}" alt="">
                                <div class="carousel-caption d-none d-md-block">
                                </div>
                            </div>
                            <div class="carousel-item ">
                                <img class="d-block w-100" style="max-height: 300px;min-height: 300px;"
                                    ng-src="{{currentDisplayingProduct.image3}}" alt="">
                                <div class="carousel-caption d-none d-md-block">
                                </div>
                            </div>
                            <div class="carousel-item ">
                                <img class="d-block w-100" style="max-height: 300px;min-height: 300px;"
                                    ng-src="{{currentDisplayingProduct.image4}}" alt="">
                                <div class="carousel-caption d-none d-md-block">
                                </div>
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#my-carousel" data-slide="prev" role="button">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#my-carousel" data-slide="next" role="button">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
                <div class="col-sm-12 col-lg-6">
                    <div>
                        <h3>Description:</h3>
                        <p> {{currentDisplayingProduct.details}} </p>
                    </div>
                    <div class="d-flex justify-content-between mt-4">
                        <h3 class="text-success">Price: à§³{{currentDisplayingProduct.askedPrice}} </h3>
                        <div>
                            <h6>Posted on: <span class="font-italic">{{currentDisplayingProduct.postedOn}}</span></h6>
                        </div>
                    </div>
                    <div class="mb-4">
                        <h6>Location: <span
                                class="text-success font-italic">{{currentDisplayingProduct.postedFrom}}</span></h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div class="d-flex">
                            <img ng-src="{{currentDisplayingProduct.Owner.imageURL}}" alt=""
                                style="width: 50px; height: 50px; border-radius: 50px;">
                            <div class="ml-3">
                                <h6>Seller:</h6>
                                <h6>{{currentDisplayingProduct.Owner.firstName}}
                                    {{currentDisplayingProduct.Owner.lastName}}</h6>
                            </div>
                        </div>
                        <div>
                            <h6>Category: <span class="text-success">{{currentDisplayingProduct.category}}</span></h6>
                            <h6>Used for: <span class="text-success">{{currentDisplayingProduct.usedFor}}</span></h6>
                        </div>
                    </div>

                    <div>
                        <button ng-if=" userToProductRelation==0" ng-click="initAddToCart()" class="btn btn-success">
                            Add to cart!
                        </button>
                        <button class="btn btn-danger" ng-if=" userToProductRelation==1">
                            Delete Ad!
                        </button>
                        <button class="btn btn-danger" ng-click="removeFromCart()" ng-if=" userToProductRelation==2">
                            Remove from cart
                        </button>
                    </div>

                </div>
            </div>
            <!-- Product Slider -->

            <!-- buyers -->
            <div>
                <h4 class="mt-5 d-flex justify-content-center">People offers for this product</h4>
                <hr>
                <div class="slider" id="mt">
                    <customerlist-component></customerlist-component>

                </div>
            </div>
            <!-- buyers end-->


            <div class="extra1" style="text-align: center;">
                <h2>See also..</h2>
            </div>

            <div class="extra my-5" style="text-align: center;">
                <h3>Other Products of same category</h3>

            </div>
            <br><br><br><br>
            <div class="pdlist">
                <div class="slider">

                    <div>
                        <div class="container productList">

                            <div id="similarProductRoot" style="display: flex;flex-wrap: nowrap;overflow-x: auto;">
                            </div>
                            <div class="container" id="noSimilarProductRoot">
                                <h5 style="text-align: center;">
                                    Looks like no such product is available now :(
                                    <p style="display: inline-block;"> Would you like to <button class="btn btn-primary"
                                            ng-click="initializePostAd()">Post an ad</button>

                                </h5>
                            </div>
                        </div>
                    </div>

                </div>
            </div>



        </div>
        <div ng-include="'shared/footer.html'"></div>

    </div>
</body>
<script src="../../js/angular.js"></script>
<script src="../../js/Globals.js"></script>
<script src="../../js/purchasePage.js"></script>

</html>